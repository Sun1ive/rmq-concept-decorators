{
  "compilerOptions": {
    "outDir": "lib/dist",
    "target": "ES2018",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "declaration": true,
    "strict": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "strictPropertyInitialization": false,
    "types": ["reflect-metadata", "node"],
    "incremental": true
  },
  "files": ["src/lib/index.ts"]
}
