{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strict": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "strictPropertyInitialization": false,
    "types": ["reflect-metadata", "node"],
    "incremental": true
  },
  "include": ["src/**/*.ts"]
}
